flowchart TD
    %% Custom Styles to match the image
    classDef userHeader fill:#5d6d7e,stroke:#333,stroke-width:2px,color:#fff,font-weight:bold;
    classDef itemHeader fill:#eb984e,stroke:#333,stroke-width:2px,color:#fff,font-weight:bold;
    classDef categoryHeader fill:#cd6155,stroke:#333,stroke-width:2px,color:#fff,font-weight:bold;
    classDef claimHeader fill:#7d3c98,stroke:#333,stroke-width:2px,color:#fff,font-weight:bold;
    classDef rel fill:#fff,stroke:#333,stroke-width:1px;

    %% User Entity
    U_Head[User]:::userHeader
    U_Attr["- UserID<br/>- Name<br/>- Email"]
    U_Head --- U_Attr

    %% Food Item Entity
    I_Head[Food Item]:::itemHeader
    I_Attr["- ItemID<br/>- Title<br/>- Expiry"]
    I_Head --- I_Attr

    %% Relationship between User and Item
    U_Head -- 1 --- Posts{Posts}:::rel
    Posts -- N --- I_Head

    %% Claim Entity
    C_Head[Claim]:::claimHeader
    C_Attr["- ClaimID<br/>- RecipientID<br/>- Date"]
    C_Head --- C_Attr

    %% Relationship between Item and Claim
    I_Head -- 1 --- Included{Subject Of}:::rel
    Included -- 1 --- C_Head

    %% Category Entity
    CAT_Head[Category]:::categoryHeader
    CAT_Attr["- CategoryID<br/>- CategoryName"]
    CAT_Head --- CAT_Attr

    %% Relationship between Item and Category
    I_Head -- N --- Belongs{Belongs To}:::rel
    Belongs -- 1 --- CAT_Head
